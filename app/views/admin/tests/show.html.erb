<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
<strong>Level:</strong>
<%= @test.level %>
</p>
<%= link_to 'Create new question', new_admin_test_question_path(@test)  %>
<%if @test.questions.present? %>
  <h1>Questions</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan='3'>Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @test.questions %>
    </tbody>
  </table>
<%end%>

<%= link_to 'Edit', edit_admin_test_path(@test)  %>
<%= link_to 'Back', tests_path  %>