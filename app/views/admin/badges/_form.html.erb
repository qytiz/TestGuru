<%= form_with model: [:admin, badge], local: true do |form| %>
  <%= render 'shared/errors', resource: badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :image_link %>
    <%= form.text_field :image_link %>
  </p>

  <p>
    <%= form.label :badge_rule %>
    <%= form.select :badge_rule, Badge::BADGES_RULES %>
  </p>

  <p>
    <%= form.label :option %>
    <%= form.text_field :option %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %> 